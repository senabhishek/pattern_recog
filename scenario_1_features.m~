%% Clear existing
clc; clear all; close all;

%% Load datafile
class_vec = [0:9];
num_objs = [1:5:1000];
data = prnist(class_vec, num_objs);

%% Scale and convert to dataset
image_size = [128 128];
preproc = im_box([],0,1)*im_resize([],image_size)*im_box([],1,0);
data_scaled = data*preproc;
img_dataset = prdataset(data_scaled);
prwaitbar off;

% im gray
% im invert
% im gaussf
% im minf
% im maxf
% im stretch
% im hist equalize im threshold
% im berosion
% im bdilation
% im bpropagation im label
% im select blob im box
% im center
% im resize
% im scale
% im rotate
% im fft
% im cols

%% Feature selection
dataset_with_computed_features = im_features(img_dataset, 'all');
classifier = [fisherc qdc];

